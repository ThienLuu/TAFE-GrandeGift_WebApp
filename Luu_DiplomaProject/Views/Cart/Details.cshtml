<table class="col table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Image</th>
            <th scope="col">Title</th>
            <th scope="col">Quantity <br/> Not functioning</th>
            <th scope="col">Action <br /> Not functioning</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.Carts)
        {
            foreach (var hamper in Model.Hampers)
            {
                @if (hamper.HamperId == item.HamperId)
                {
                    <tr>
                        <td class="text-center align-middle">
                            @if (hamper.FileName == null)
                            {
                                <img src="~/Images/Image-not-available_1.jpg" alt="N/A" height="150" />
                            }
                            else
                            {
                                <img src="~/Images/@hamper.FileName" alt="@hamper.FileName" height="150" />
                            }
                        </td>
                        <td class="align-middle">@hamper.Name</td>
                        <td class="text-center align-middle">
                            <div class="col quantity">
                                @*<input style="width: 68px" asp-for="Quantity" type="number" min="1" max="5" step="1" value="1">*@
                                <input style="width: 68px" type="number" min="1" max="5" step="1" value="@item.Quantity">
                            </div>
                        </td>
                        <td class="text-center align-middle">
                            <button style="width:60px">X</button>
                        </td>
                    </tr>
                    totalItems++;
                    totalPrice += item.TotalPrice;
                }
            }
        }
    </tbody>
</table>

<div class="row">
    <div class="col-12">
        <h2>Total: $@totalPrice</h2>
    </div>
</div>

<div class="text-center mt-3">
    <a class="btn btn-light border-info text-primary" style="height: 50px; padding: 11px" role="button" href="@Url.Action("Create", "Order")">Proceed to Order</a>
</div>

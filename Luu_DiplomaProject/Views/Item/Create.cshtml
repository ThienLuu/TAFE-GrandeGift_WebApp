@model ItemCreateViewModel
@{
    ViewData["Title"] = "Create";
}

<h2>Create Item</h2>

<form asp-controller="Item" asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <input asp-for="HamperId" hidden="hidden" />
    <div class="row">
        <div>
            <label asp-for="Name">Name:</label>
            <input asp-for="Name" class="form-control" placeholder="City" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Size">Size:</label>
            <input asp-for="Size" class="form-control" placeholder="State" />
            <span asp-validation-for="Size" class="text-danger"></span>
        </div>
    </div>
    <div>
        <input type="submit" value="Add Address" class="btn" />
    </div>
</form>

<a class="btn btn-primary w-100" role="button" href="@Url.Action("Details", "Hamper", new { id = Model.HamperId})">Back</a>
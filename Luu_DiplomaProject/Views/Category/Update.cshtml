@model CategoryUpdateViewModel

@{
    ViewData["Title"] = "Update";
}

<h2>Update Category</h2>

<form asp-controller="Category" asp-action="Update" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <input asp-for="CategoryId" hidden="hidden" />
    <div class="row">
        <div class="col">
            <label asp-for="Name">Category Name</label>
            <input asp-for="Name" class="form-control" placeholder="Category Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" placeholder="Description" rows="3" cols="100"></textarea>
        </div>
    </div>
    <div>
        <input type="submit" value="Update Category" class="btn" />
    </div>
</form>

<a class="btn btn-primary w-100" role="button" href="@Url.Action("Admin", "Home")">Admin Home</a>
@model CategoryDetailsViewModel
@{
    ViewData["Title"] = "Details";
}

<h2>Categories</h2>

<table class="table table-bordered">
    <thead class="thead-light">
        <tr>
            <th>Category Name</th>
            <th style="width: 250px">Description</th>
            <th></th>
        </tr>
    </thead>
    @foreach (var category in Model.Categories)
    {
        <tr>
            <td>@category.Name</td>
            <td>@category.Description</td>
            <td>
                <a class="btn btn-primary w-100" role="button" href="@Url.Action("Update", "Category", new { id = category.CategoryId })">Update Category</a>
            </td>
        </tr>
    }
</table>

<a class="btn btn-primary w-100" role="button" href="@Url.Action("Admin", "Home")">Admin Home</a>

@model HomeShopViewModel

@{
    ViewData["Title"] = "Shop";
}

<h2>Shop</h2>

<div class="row m-4">
    <div class="col-md-4">
        <label>Category:</label>

        <select>
            <option value="" disabled selected>Select Category</option>
            @foreach (var category in Model.Categories)
            {
                <option>@category.Name</option>
            }
        </select>
    </div>
    <div class="col-md-5">
        <div class="row"><label>Price Range:</label></div>
        <div class="row justify-content-center">
            <label>Min:</label>
            <input size="10" />
            <label>Max:</label>
            <input size="10" />
        </div>
    </div>

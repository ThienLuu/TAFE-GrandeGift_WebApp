@model HomeDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h2>Hamper Details</h2>

<div class="col-9">
    @if (Model.FileName == null)
    {
        <img src="~/Images/Image-not-available_1.jpg" alt="N/A" height="200" />
    }
    else
    {
        <img src="~/Images/@Model.FileName" alt="@Model.FileName" height="200" />
    }
</div>
<div class="col-3">
    <h2>@Model.Name</h2>
    <h5>@Model.Price</h5>
    <ul>
        @foreach (var item in Model.Items)
        {
            if (Model.HamperId == item.HamperId)
            {
                <li>@item.Name @item.Size</li>
            }
        }
    </ul>
    <button class="btn btn-primary">Add to Cart</button>
</div>
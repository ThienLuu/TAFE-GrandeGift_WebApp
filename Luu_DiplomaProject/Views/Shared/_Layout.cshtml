        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Welcome to Grande Gift</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <b>This is a project currently in build and for testing.</b> Not all features/pages are available. Please <b>register</b> or <b>log in</b> to use extra features
                </div>
                <div class="modal-footer mx-auto">
                    <a class="btn btn-light border-info text-primary" style="width: 100px" href="@Url.Action("Register", "Account")">Register</a>
                    <a class="btn btn-light border-info text-primary" style="width: 100px" href="@Url.Action("Login", "Account")">Login</a>
                </div>
            </div>
        </div>
    </div>*@

    <script src="~/node_modules/jquery/dist/jquery.js"></script>
    <script src="~/node_modules/popper.js/dist/umd/popper.js"></script>
    <script src="~/node_modules/bootstrap/dist/js/bootstrap.js"></script>

    <!--OTHER SCRIPTS-->
    <script src="~/JS/bootstrap-show-password.js"></script>
    <script src="~/JS/SpecialCarousel.js"></script>
    <script src="~/JS/QuantityButton.js"></script>
    @if (User.Identity.IsAuthenticated)
    {

    }
    else
    {
        <script src="~/JS/Modal.js"></script>
    }
    <!--OTHER SCRIPTS-->

    @RenderSection("Scripts", required: false)
</body>
</html>

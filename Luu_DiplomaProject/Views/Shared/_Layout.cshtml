<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/node_modules/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/CSS/SocialMediaButtons.css" rel="stylesheet" />
    <link href="~/CSS/SpecialCarousel.css" rel="stylesheet" />
    <link href="~/CSS/ShoppingCart.css" rel="stylesheet" />
    <link href="~/CSS/ReadableTable.css" rel="stylesheet" />
    <link href='http://fonts.googleapis.com/css?family=Arizonia' rel='stylesheet' type='text/css'>
    <link href="~/CSS/Font.css" rel="stylesheet" />
    <style>
        /*PAGE BACK BACKGROUND COLOR*/
        body {
            background-color: grey
        }
        /*PAGE BACK BACKGROUND COLOR*/


        /*THIS IS THE DROP DOWN *NOT WORKING**/
        ul.nav li.dropdown:hover ul.dropdown-menu {
            display: block;
        }
    </style>
</head>
<body>
    <!--START=-=-=-=-=-=-=-=-=-=-=-=-=-=-=HEADER=-=-=-=-=-=-=-=-=-=-=-=-=-=-=START-->
    <div class="row bg-dark text-light pt-3">
        <div class="col-md-4">
            <div class="d-flex justify-content-md-start justify-content-center p-2">
                <a href="#" class="fa fa-facebook"></a>
                <a href="#" class="fa fa-twitter"></a>
                <a href="#" class="fa fa-youtube"></a>
                <a href="#" class="fa fa-instagram"></a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="d-flex justify-content-center text-center">
                <figure class="px-3">
                    <img src="~/Images/delivery-truck.png" alt="Truck Image" width="50" />
                    <figcaption>
                        <h6>$7.50 Flat delivery rate</h6>
                    </figcaption>
                </figure>
                <figure class="px-3">
                    <img src="~/Images/24-hours-delivery.png" alt="Time Image" width="50" />
                    <figcaption>
                        <h6>Same day delivery option</h6>
                    </figcaption>
                </figure>
            </div>
        </div>

        <div class="col-md-4">
            @if (User.Identity.IsAuthenticated)
            {
                <div class="d-flex justify-content-center">
                    <h1>Welcome: @User.Identity.Name</h1>
                </div>
                <div class="d-flex justify-content-center">
                    <a class="nav-link float-right h5 text-info" href="@Url.Action("Logout", "Account")">Logout</a>
                </div>
            }
            else
            {
                <div class="d-flex justify-content-md-end justify-content-center pt-md-3">
                    <span>
                        <a class="nav-link float-right h5 text-info" href="@Url.Action("Login", "Account")">Login</a>
                        <a class="nav-link float-right h5 text-info" href="@Url.Action("Register", "Account")">Register</a>
                    </span>
                </div>
            }
        </div>
    </div>

    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="d-flex h-50 align-items-center justify-content-center" style="position:absolute; z-index:100; width: 100%; padding-top: 45px">
                <h1 id="grandeGift">Grande Gift</h1>
            </div>
            <div class="d-flex h-50 align-items-center justify-content-center" style="position:absolute; z-index:100; width: 100%; padding-top: 175px">
                <a class="btn btn-info" href="@Url.Action("Shop", "Home")">Shop Hampers</a>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Images/nursery-decoration-1963815_1920.jpg" data-color="lightblue" alt="First Image">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Images/christmas-1911637_1920.jpg" data-color="firebrick" alt="Second Image">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Images/food-1932466_1920.jpg" data-color="violet" alt="Third Image">
            </div>
        </div>
    </div>
    <!--=-=-=-=-=-=-=-=-=-=-=-=-=-=-=HEADER=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-->
    <!--START=-=-=-=-=-=-=-=-=-=-=-=-=-=-=NAVBAR=-=-=-=-=-=-=-=-=-=-=-=-=-=-=START-->
    <!--START=-=-=-=-=-=-=-=-=-=-=-=-=-=-=SHOPPING CART LIST=-=-=-=-=-=-=-=-=-=-=-=-=-=-=START-->
    <div class="row" style="position: absolute; right: 20px; z-index: 100">
        <div class="dropdown-shop">
            @await Component.InvokeAsync("CartSummary")
        </div>
    </div>
    <!--=-=-=-=-=-=-=-=-=-=-=-=-=-=-=SHOPPING CART LIST=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-->

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse text-center" id="navbarSupportedContent">
            <ul class="navbar-nav mx-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="@Url.Action("Index", "Home")">Home <!--<span class="sr-only">(current)</span>--></a>
                </li>
                @*<li class="nav-item dropdown d-inline bg-info">
                        <a class="nav-link dropdown-toggle" href="@Url.Action("Shop","Home")" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Shop
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <!--Top 10 Categories-->
                            <a class="dropdown-item" href="@Url.Action("","")">Test</a>
                        </div>
                    </li>*@
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Shop", "Home")">Shop</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("About", "Home")">About Us</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Contact", "Home")">Contact Us</a>
                </li>
                @{
                    if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link bg-danger" href="@Url.Action("Admin", "Home")">Admin Interface</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item dropdown d-inline bg-danger">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Account
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" href="@Url.Action("Update", "Account")">Profile</a>
                                    <a class="dropdown-item disabled" href="#">Change Password</a>
                                    <a class="dropdown-item disabled" href="#">Payment Details</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="@Url.Action("Logout", "Account")">Logout</a>
                                </div>
                            </li>
                        }
                    }
                    else
                    {

                    }
                }
            </ul>
            <!--SEARCH-->
            @*<form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form>*@
        </div>
    </nav>
    <!--=-=-=-=-=-=-=-=-=-=-=-=-=-=-=NAVBAR=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-->
    <!--START=-=-=-=-=-=-=-=-=-=-=-=-=-=-=CONTENT=-=-=-=-=-=-=-=-=-=-=-=-=-=-=START-->
    <div class="container bg-light p-4">
        @RenderBody()
    </div>
    <!--=-=-=-=-=-=-=-=-=-=-=-=-=-=-=CONTENT=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-->
    <!--START=-=-=-=-=-=-=-=-=-=-=-=-=-=-=FOOTER=-=-=-=-=-=-=-=-=-=-=-=-=-=-=START-->
    <div class="container-fluid bg-dark">
        <div class="row p-3">
            <div class="col-3">
                <h4 class="text-light">Information</h4>
                <a class="nav-link px-0 py-1" href="#">FAQ</a>
                <a class="nav-link px-0 py-1" href="#">Contact Us</a>
                <a class="nav-link px-0 py-1" href="#">About Us</a>
            </div>
            <div class="col-md-3">
                <h4 class="text-light">The Fine Print</h4>
                <a class="nav-link px-0 py-1" href="#">Security & Privacy</a>
                <a class="nav-link px-0 py-1" href="#">Returns & Refunds</a>
                <a class="nav-link px-0 py-1" href="#">Terms & Conditions</a>
                <a class="nav-link px-0 py-1" href="#">Delivery</a>
            </div>
            <div class="col-md-3">
                <h4 class="text-light">Account</h4>
                <a class="nav-link px-0 py-1" href="#">Register</a>
                <a class="nav-link px-0 py-1" href="#">Subscribe</a>
                <a class="nav-link px-0 py-1" href="#">Login</a>
            </div>
            <div class="col-md-3">
                <h4 class="text-light">Connect With Us</h4>
                <a href="#" class="fa fa-facebook"></a>
                <a href="#" class="fa fa-twitter"></a>
                <a href="#" class="fa fa-youtube"></a>
                <a href="#" class="fa fa-instagram"></a>
            </div>
        </div>
        <div class="row bg-info p-1">
            <h6 class="mx-auto">Copyright 2018</h6>
        </div>
    </div>
    <!--=-=-=-=-=-=-=-=-=-=-=-=-=-=-=FOOTER=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-->

    <script src="~/node_modules/jquery/dist/jquery.js"></script>
    <script src="~/node_modules/popper.js/dist/umd/popper.js"></script>
    <script src="~/node_modules/bootstrap/dist/js/bootstrap.js"></script>

    <!--OTHER SCRIPTS-->
    <script src="~/JS/SpecialCarousel.js"></script>
    <!--OTHER SCRIPTS-->

    @RenderSection("Scripts", required: false)
</body>
</html>
